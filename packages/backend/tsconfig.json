{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "outDir": "build",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src"],
    "tsc-alias": {
        "resolveFullPaths": true
    }
}
